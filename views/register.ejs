<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Responsive Registration Form</title>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="register.css">
</head>
<body>
    <% if (messages.error && messages.error.length > 0) { %>
        <div class="alert alert-danger">
          <% messages.error.forEach(function(msg) { %>
            <p><%= msg %></p>
          <% }) %>
        </div>
      <% } %>
      
      <% if (messages.success && messages.success.length > 0) { %>
        <div class="alert alert-success">
          <% messages.success.forEach(function(msg) { %>
            <p><%= msg %></p>
          <% }) %>
        </div>
      <% } %>
      
    

    <div class="form-box">
        <form class="row g-3 needs-validation" novalidate  action="/register" method="POST">
           
            <div class="col-md-6">
                <label for="username" class="form-label">Username</label>
                <div class="input-group">
                    <input type="text" class="form-control" id="username"  name="username" placeholder="Username" required>
                    <i class='bx bxs-user'></i>
                </div>
                <div class="valid-feedback">Looks good!</div>
            </div>

            <div class="col-md-6">
                <label for="email" class="form-label">Email</label>
                <div class="input-group">
                    <input type="email" class="form-control" id="email" placeholder="Email" name="email" required>
                    <i class='bx bxs-envelope'></i>
                </div>
                <div class="valid-feedback">Looks good!</div>
            </div>

            <div class="col-md-6">
                <label for="password" class="form-label">Password</label>
                <div class="input-group">
                    <input type="password" class="form-control" id="password" placeholder="Password" name="password" required>
                    <i class='bx bxs-lock-alt'></i>
                </div>
                <div class="invalid-feedback">Please provide a strong password.</div>
            </div>

            <div class="col-md-6">
                <label for="branch" class="form-label">Branch</label>
                <select class="form-select" id="branch" name="branch" required>
                    <option value="" disabled selected>Select Branch</option>
                    <option value="CSE">CSE</option>
                    <option value="ISE">ISE</option>
                    <option value="ECE">ECE</option>
                    <option value="EEE">EEE</option>
                    <option value="MCE">hi</option>
                    <option value="TELCOM">TELCOM</option>
                    <option value="CIVIL">CIVIL</option>
                    <option value="AI & ML">AI & ML</option>
                </select>
                <div class="invalid-feedback">Please select a valid branch.</div>
            </div>

            <div class="col-md-6">
                <label for="admissionYear" class="form-label">Admission Year</label>
                <input type="number" class="form-control" id="admissionYear" name="graduate" placeholder="Admission Year" required>
                <div class="invalid-feedback">Please provide a valid admission year.</div>
            </div>

            <div class="col-md-6">
                <label for="role" class="form-label">Role</label>
                <select class="form-select" id="role" name="role" required>
                    <option value="" disabled selected>Select Role</option>
                    <option value="student">Student</option>
                    <option value="alumni">Alumni</option>
                </select>
                <div class="invalid-feedback">Please select a valid role.</div>
            </div>

            <div class="col-md-6">
                <label for="usn" class="form-label">Usn</label>
                <input type="text" class="form-control" id="usn" name="usn" placeholder="USN" required oninput="this.value = this.value.toUpperCase()">

                <div class="invalid-feedback">Please provide a valid usn.</div>
            </div>

            <div class="col-md-6">
                <label for="mobileno" class="form-label">mobile No</label>
                <input type="string" class="form-control" id="mobileno" name="mobileno" placeholder="mobile No" required>
                <div class="invalid-feedback">Please provide a valid mobile No.</div>
            </div>


            <div class="col-md-12">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="termsCheck" required>
                    <label class="form-check-label" for="termsCheck">
                        Agree to terms and conditions
                    </label>
                    <div class="invalid-feedback">You must agree before submitting.</div>
                </div>
            </div>

            

            <div class="col-md-12 text-center">
                <button class="btn btn-secondary " class="btn" type="submit">Register</button>
            </div>

            <p class="text-center mt-2"><strong>OR</strong></p>

            <div class="col-md-12 text-center">
                <a href="/login" class="btn btn-secondary " class="btn">Login</a>
            </div>
        </form>
    </div>

    <script>
        (() => {
            'use strict';
          
            const forms = document.querySelectorAll('.needs-validation');
          
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
          
                    form.classList.add('was-validated');
                }, false);
            });
        })();
        document.getElementById('usn').addEventListener('input', function() {
            this.value = this.value.toUpperCase();
        });
        
    </script>

</body>
</html>
